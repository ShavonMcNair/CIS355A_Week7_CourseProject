    // Pass a JTextField in as a parameter, and returna doubel value. With some error handling
    private double getDoubleFromJTF(JTextField jtf){
        double d = 0;
            try{
                d = Double.parseDouble(jtf.getText());
            } catch(NumberFormatException e) {
                System.out.println("Error pulling double from text field, returning 0 instead: " + e);
            }
        return d;
    }
    
    // Returns the cost of the selected radio button option
    private double getFlooringCost(){
        double cost;
        if(jrbWood.isSelected()){
            cost = WOOD_COST;
        } else {
            cost = CARPET_COST;
        }
        return cost;
    }
    
    // Returns a string values of the floor type
    private String getFlooringType(){
        String type;
        if(jrbWood.isSelected()){
            type = "Wood";
        } else {
            type = "Carpet";
        }
        return type;
    }
    
    // Checks to see if all the fields are properly populated, otherwise returns false
    private Boolean checkFormForValidInformation(){
        return !(getDoubleFromJTF(jtfLength) == 0 ||
                getDoubleFromJTF(jtfWidth) == 0 ||
                "".equals(jtfName.getText()) ||
                "".equals(jtfAddress.getText()));
    }
    
    // Tries to verify that Length and Width fields have proper values and returns appropriate errors.
    private Boolean checkFormForValidLengthWidth(){
        Boolean valid = false;
        if ("".equals(jtfLength.getText()) || "".equals(jtfWidth.getText())){ // If any fields are empty
            JOptionPane.showMessageDialog(null, "Please enter values into both width and length fields", "Error", WIDTH);
        } else {
            try {
                // If the fields are non-numeric or are zero (getDoubleFromJTF returns 0 if it cannot convert from a string)
                if (getDoubleFromJTF(jtfLength) <= 0 || getDoubleFromJTF(jtfWidth) <= 0){ 
                    JOptionPane.showMessageDialog(null, "Please enter positive numbers into the width and length fields");
                } else {
                    valid = true;
                }
            } catch (HeadlessException e) {
                System.out.println(e);
            }
        }
        return valid;
    }
    
    // More easily pulls the area from the form.
    private double getAreaFromForm(){
        return Order.calculateArea(getDoubleFromJTF(jtfLength), getDoubleFromJTF(jtfWidth));
    }
    
    // Updates the Order table. 
    public void updateOrderTable(){
        DefaultTableModel model = (DefaultTableModel) tblOrders.getModel();
        // If called more than once, clears the table so no duplicate entries happen
        model.setRowCount(0);
        try {
            ArrayList<Order> orders = OrderDB.getOrdersFromDatabase();
            orders.forEach((o) -> {
                model.addRow(new Object[]{o.getCustomerName(), o.getCustomerAddress(), o.getFloorType(), o.getFloorArea(), String.format("$%.2f", o.getFloorCost())});
            });
        } catch (Exception e){
            JOptionPane.showMessageDialog(null, "Error: " + e, "Error", WIDTH);
        }                       
    }

