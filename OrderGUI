    private void jbnCalcAreaActionPerformed(java.awt.event.ActionEvent evt) {                                            
        
        // Gather information form the worm and passes it to the calculateArea 
        // method in order, and displays the information in a message dialog
        // Checks for invalid values and displays appropriate response.
        
        if (checkFormForValidLengthWidth()){
            double length = getDoubleFromJTF(jtfLength);
            double width = getDoubleFromJTF(jtfWidth);
            JOptionPane.showMessageDialog(null, "Area is :" + Order.calculateArea(length, width) + " SqFt");
        }
    }                                           

    private void jbnCalcCostActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // Similar to the above method, except does it with cost.
        if (checkFormForValidLengthWidth()){
            double length = getDoubleFromJTF(jtfLength);
            double width = getDoubleFromJTF(jtfWidth);
            double cost = getFlooringCost();
            JOptionPane.showMessageDialog(null, "Cost would be: $" + Order.calculateCost(Order.calculateArea(length, width), cost));
        } 
    }                                           

    private void jbnSubmitActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // Checks to see if information is valid, if so, it creates a new order.
        if (checkFormForValidInformation()){
            // Creates new order object with specified fields
            order = new Order (
                    jtfName.getText(),
                    jtfAddress.getText(),
                    getFlooringType(),
                    getAreaFromForm(),
                    Order.calculateCost(getAreaFromForm(), getFlooringCost()));
            
            // Updates the order summary page
            jtfSumName.setText(order.getCustomerName());
            jtfSumAdd.setText(order.getCustomerAddress());
            jtfSumFloor.setText(order.getFloorType());
            jtfSumArea.setText(String.valueOf(order.getFloorArea()));
            jtfSumCost.setText(String.format("$%.2f", order.getFloorCost()));
            jbnCompleteOrder.setEnabled(true); // Enables the confirm order button
            
            // directs user to the summary page
            OrderTabPane.setSelectedIndex(1);
        } else {
            JOptionPane.showMessageDialog(null, "Error, all fields must be filled.");
        }
    }                                         

    private void jbnCompleteOrderActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // Adds the order to the Database
        OrderDB.addOrderToDatabase(order);
        
        // Resets the values on the order page.
        jtfName.setText("");
        jtfAddress.setText("");
        jtfLength.setText("");
        jtfWidth.setText("");
    }                                                

    private void OrderTabPaneStateChanged(javax.swing.event.ChangeEvent evt) {                                          
        // When switching to the order Summary panel, updates the list from the database.
        if (OrderTabPane.getSelectedIndex() == 2){
            updateOrderTable();
        }
    }                                         

